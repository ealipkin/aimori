extends ../layouts/main

block content
  main.main
    //.jarallax
    .background-image.jarallax
    .container.content-wrapper
      h1.page-title Ai Mori - Официальный&nbsp;сайт
      .row
        .col
          h2.content-title.content Подписаться 
          ul.links
            li.links__item
              a(href="https://vk.com/aimori" title="Ai Mori Vkontakte", target="_blank" rel="noopener").links__link.links__link--vk
            li.links__item
              a(href="https://youtube.com/aimori" title="Ai Mori YouTube", target="_blank" rel="noopener").links__link.links__link--youtube
            li.links__item
              a(href="https://www.twitch.tv/ai_mori" title="Ai Mori Twitch", target="_blank" rel="noopener").links__link.links__link--twitch
